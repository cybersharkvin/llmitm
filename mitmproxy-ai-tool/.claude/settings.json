{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/query-atomization.sh",
            "timeout": 120
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(mitmdump:*)",
      "Bash(iptables:*)",
      "Bash(curl:*)",
      "Bash(dig:*)",
      "Bash(nc:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(diff:*)",
      "Bash(dmesg:*)",
      "Read",
      "Write",
      "Glob",
      "Grep"
    ],
    "deny": [
      "Bash(rm -rf /)*",
      "Bash(shutdown)*",
      "Bash(reboot)*"
    ]
  }
}
